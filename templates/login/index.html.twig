{% extends 'base.html.twig' %}

{% block body %}

    <div class="container my-5">
        <div>
            <h1>Connection</h1>
            <hr>
        </div>
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path('app_login') }}" method="post">
            <label class="mt-3" for="username">Email:</label>
            <input class = "form-control mt-3" type="text" id="username" name="_username" value="{{ last_username }}" required>

            <label class="mt-3"  for="password">Password:</label>
            <input class = "form-control mt-3" type="password" id="password" name="_password" required>
            <input type="hidden" name="_target_path" value="{{ path('app_register_user') }}">

            <button class="btn btn-primary mt-3" type="submit">Connection</button>
        </form>
        <p>Si vous n'avez pas de compte <a href ="{{ path('app_register_user') }}">Inscrivez vous</a></p>
    </div>
{% endblock %}
